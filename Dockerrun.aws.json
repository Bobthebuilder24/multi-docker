{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "bobthebuilder24/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "bobthebuilder24/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "bobthebuilder24/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "ngnix",
            "image": "bobthebuilder/multi-ngnix",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPost":80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}